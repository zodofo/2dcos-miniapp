/* 页面整体：上下各 ~10vh 留白 + 安全区，避免太靠上/下 */
.page {
  min-height: 100vh;
  padding-top: calc(10vh + env(safe-area-inset-top));
  padding-bottom: calc(10vh + env(safe-area-inset-bottom));
  background: #f7f7f7;
  box-sizing: border-box;
}

/* 无结果时，让上传区垂直水平居中到正中间 */
.centered {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 内容区：居中并限制最大宽度，避免左右顶格 */
.content {
  width: 92%;
  max-width: 700rpx;
  margin: 0 auto;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
  margin-bottom: 28rpx;
}

.row {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.num-input {
  border: 1px solid #ddd;
  padding: 8rpx 12rpx;
  width: 160rpx;
  border-radius: 8rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

/* 图片自适应：宽度铺满容器，同时限制最大高度，保持比例 */
.result-img {
  width: 90%;
  margin: 20rpx auto;
  display: block;
  max-height: 60vh;    /* 竖屏时不至于过高；想更大可调到 70vh */
  object-fit: contain; /* 保持比例，不拉伸 */
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-top: 16rpx;
}
